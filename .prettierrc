{
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"singleQuote": true,
	"endOfLine": "lf",
	"bracketSpacing": true,
	"trailingComma": "es5",
	"overrides": [
		{
			"files": ["**/*.css", "**/*.scss", "**/*.html"],
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": ["**/*.yml"],
			"options": {
				"useTabs": false
			}
		}
	]
}
